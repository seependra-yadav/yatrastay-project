        <% for(let listing of allListings){ %>
            <div class="card" style="width: 18rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"/>
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.title %> <br>
                    </p>
                </div>
            </div>

            <% }%>
                <ul>
                    <% for(let listing of allListings){ %>
                        <li><a href="/listings/<%= listing._id %>">
                                <%= listing.title %>
                            </a></li>
                        <% }%>
                </ul>
    </body>