<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>create a new listing</h3>

                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label"> Title </label>
                        <input name="listing[title]" placeholder="enter a title" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a title.</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label"> Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a description.</div>
                    </div>

                    <div class="mb-3" data-image-picker data-max-files="10" data-max-size-mb="10">
                        <label for="images" class="form-label">Upload images</label>
                        <input
                            name="listing[images]"
                            id="images"
                            type="file"
                            class="form-control"
                            accept="image/*"
                            multiple
                        >
                        <small class="text-muted">You can upload up to 10 images, 10 MB each. If none are selected, a default image is used.</small>
                        <div class="selected-upload-images mt-3" data-selected-preview></div>
                        <small class="text-muted d-block mt-2" data-selected-summary></small>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-2">
                            <label for="price" class="form-label"> price </label>

                            <input name="listing[price]" placeholder="enter a price" type="number" class="form-control" min="0" required>
                            <div class="invalid-feedback">Please enter a valid price.</div>
                        </div>


                        <div class="mb-3 col-md-2">
                            <label for="displayNights" class="form-label">Card nights</label>
                            <input
                                id="displayNights"
                                name="listing[displayNights]"
                                type="number"
                                class="form-control"
                                min="1"
                                max="30"
                                value="2"
                                required
                            >
                            <div class="invalid-feedback">Enter nights between 1 and 30.</div>
                        </div>

                        <div class="mb-3 col-md-2">
                            <label for="maxGuests" class="form-label">Max guests</label>
                            <input
                                id="maxGuests"
                                name="listing[maxGuests]"
                                type="number"
                                class="form-control"
                                min="1"
                                max="20"
                                value="4"
                                required
                            >
                            <div class="invalid-feedback">Enter guests between 1 and 20.</div>
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="country" class="form-label"> Country </label>

                            <input name="listing[country]" placeholder="enter a country" type="text"
                                class="form-control" required>
                            <div class="invalid-feedback">Please enter a country.</div>
                        </div>

                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-label"> Location </label>

                        <input name="listing[location]" placeholder="enter a location" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a location.</div>

                    </div>
                    



                    <button class="btn btn-dark add-btn mt-3">add</button>
                </form>
            </div>
        </div>
        <script src="/js/listing-image-picker.js"></script>
    </body>
