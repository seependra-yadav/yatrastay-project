<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">


                <h3>edit your listing</h3>

                <form method="POST" action="/listings/<%= listing._id %>/?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>

                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Please enter a title.</div>

                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">description</label>

                        <textarea name="listing[description]" class="form-control" required><%= listing.description%></textarea>
                        <div class="invalid-feedback">Please enter a description.</div>

                    </div>
                    <div class="mb-3" data-image-picker data-max-files="10" data-max-size-mb="10">
                        <label for="images" class="form-label">Images</label>
                        <div class="listing-image-grid mb-3">
                            <% if (listing.imageGallery && listing.imageGallery.length > 0) { %>
                                <% listing.imageGallery.forEach((imageMeta, index) => { %>
                                    <div class="listing-image-item">
                                        <img src="<%= imageMeta.url %>" alt="Current listing image <%= index + 1 %>">
                                        <% if (imageMeta && imageMeta.filename !== "default-listing-image") { %>
                                            <div class="form-check mt-2">
                                                <input
                                                    class="form-check-input"
                                                    type="checkbox"
                                                    name="deleteImages[]"
                                                    value="<%= imageMeta.filename %>"
                                                    id="delete-image-<%= index %>"
                                                >
                                                <label class="form-check-label" for="delete-image-<%= index %>">Remove</label>
                                            </div>
                                        <% } else { %>
                                            <small class="text-muted mt-2">Default image</small>
                                        <% } %>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                        <input
                            name="listing[images]"
                            id="images"
                            class="form-control"
                            type="file"
                            accept="image/*"
                            multiple
                        >
                        <small class="text-muted">Upload up to 10 new images (10 MB each). Checked images will be removed after update.</small>
                        <div class="selected-upload-images mt-3" data-selected-preview></div>
                        <small class="text-muted d-block mt-2" data-selected-summary></small>

                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-2">
                            <label for="price" class="form-label">Price</label>

                            <input name="listing[price]" class="form-control" value="<%= listing.price %>"
                                type="number" min="0" required>
                            <div class="invalid-feedback">Please enter a valid price.</div>

                        </div>

                        <div class="mb-3 col-md-2">
                            <label for="displayNights" class="form-label">Card nights</label>
                            <input
                                id="displayNights"
                                name="listing[displayNights]"
                                class="form-control"
                                value="<%= listing.displayNights || 2 %>"
                                type="number"
                                min="1"
                                max="30"
                                required
                            >
                            <div class="invalid-feedback">Enter nights between 1 and 30.</div>

                        </div>

                        <div class="mb-3 col-md-2">
                            <label for="maxGuests" class="form-label">Max guests</label>
                            <input
                                id="maxGuests"
                                name="listing[maxGuests]"
                                class="form-control"
                                value="<%= listing.maxGuests || 4 %>"
                                type="number"
                                min="1"
                                max="20"
                                required
                            >
                            <div class="invalid-feedback">Enter guests between 1 and 20.</div>

                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="country" class="form-label">Country</label>

                            <input name="listing[country]" class="form-control" value="<%= listing.country%>"
                                type="text" required>
                            <div class="invalid-feedback">Please enter a country.</div>

                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>

                        <input name="listing[location]" class="form-control" value="<%= listing.location %>"
                            type="text" required>
                            <div class="invalid-feedback">Please enter a location.</div>

                    </div>




                    <button class="btn btn-dark edit-btn mt-3">edit</button>
                </form>
            </div>
        </div>
        <script src="/js/listing-image-picker.js"></script>
    </body>
