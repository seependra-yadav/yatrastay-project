<% layout("./layouts/boilerplate") %>

    <body>
        <div class="row mt-2 mb-3">
            <div class="col-8 offset-3">


                <h3><%= listing.title %></h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        
                        <br>
                        <%= listing.description%>
                            <br>
                            <% if (listing.price != null) { %>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %>
                            <% } else { %>
                                Price not available
                            <% } %>
                                <br>
                                <%= listing.location%>
                                    <br>
                                    <%= listing.country%>
                                    <br>
                                    <% const ownerName = listing.owner ? (listing.owner.name || listing.owner.email) : "Unknown host"; %>
                                    Hosted by <%= ownerName %>
                    </p>
                </div>
            </div>

            <% // UI guard: show edit/delete only to listing owner. %>
            <% const isListingOwner = currUser && listing.owner && String(currUser._id) === String(listing.owner._id); %>
            <div class="btns">
                <% if (isListingOwner) { %>
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-5">Delete</button>
                    </form>
                <% } %>
            </div>
           

            <div class="col-8 offset-3 mb-3">
                <h4>leaave a review</h4>
                <% // Only logged-in users can submit review. %>
                <% if (currUser) { %>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="mb-3 mt-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input
                                type="range"
                                min="1"
                                max="5"
                                step="1"
                                value="3"
                                id="rating"
                                name="review[rating]"
                                class="form-range"
                                required
                            >
                            <div class="invalid-feedback">Please choose a rating between 1 and 5.</div>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">comments</label>
                            <textarea
                                name="review[comment]"
                                id="comment"
                                cols="30"
                                rows="5"
                                class="form-control"
                                required
                                minlength="5"
                                maxlength="500"
                            ></textarea>
                            <div class="invalid-feedback">Comment must be between 5 and 500 characters.</div>
                        </div>

                        <button class="btn btn-outline-dark ">submit</button>
                    </form>
                <% } else { %>
                    <p class="text-muted">Please <a href="/login">login</a> to add a review.</p>
                <% } %>
            </div>

            <div class="col-8 offset-3 mb-3">
                <h4>All Reviews</h4>

                <% if (!listing.reviews || listing.reviews.length === 0) { %>
                    <p class="text-muted">No reviews yet. Be the first to review this listing.</p>
                <% } else { %>
                    <% listing.reviews.forEach((review) => { %>
                        <% // Fallback to email for older users without name. %>
                        <% const reviewAuthorName = review.author ? (review.author.name || review.author.email) : "Guest"; %>
                        <% // UI guard: only review author sees delete button. %>
                        <% const isReviewOwner = currUser && review.author && String(currUser._id) === String(review.author._id); %>
                        <div class="card shadow-sm border-0 mb-3">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <span class="fw-semibold"><%= reviewAuthorName %></span>
                                <span class="badge text-bg-dark"><%= review.rating %>/5</span>
                            </div>
                            <div class="card-body">
                                <p class="card-text mb-0"><%= review.comment %></p>
                            </div>
                            <% if (isReviewOwner) { %>
                                <div class="card-footer bg-white border-0 pt-0">
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-outline-danger">Delete Review</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </body>
