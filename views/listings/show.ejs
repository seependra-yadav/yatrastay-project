<% layout("./layouts/boilerplate") %>

    <body>
        <div class="row mt-2 mb-3">
            <div class="col-8 offset-3">


                <h3><%= listing.title %></h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <% const allImages = listing.imageUrls && listing.imageUrls.length > 0 ? listing.imageUrls : [listing.imageUrl]; %>
                <div class="show-gallery" data-gallery-slider>
                    <button type="button" class="gallery-nav gallery-nav-left" data-gallery-prev aria-label="Previous image">&lsaquo;</button>
                    <div class="show-gallery-track" data-gallery-track>
                        <% allImages.forEach((imgUrl, index) => { %>
                            <img src="<%= imgUrl %>" class="show-gallery-image" alt="listing image <%= index + 1 %>">
                        <% }) %>
                    </div>
                    <button type="button" class="gallery-nav gallery-nav-right" data-gallery-next aria-label="Next image">&rsaquo;</button>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <% const listingDisplayNights = (listing.displayNights && listing.displayNights > 0) ? listing.displayNights : 2; %>
                        <% const listingPackagePrice = listing.price != null ? listing.price * listingDisplayNights : null; %>
                        
                        <br>
                        <%= listing.description%>
                            <br>
                            <% if (listing.price != null) { %>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> per night
                                <br>
                                &#8377; <%= listingPackagePrice.toLocaleString("en-IN") %> for <%= listingDisplayNights %> night<%= listingDisplayNights > 1 ? "s" : "" %>
                                <br>
                                Up to <%= listing.maxGuests || 4 %> guests
                            <% } else { %>
                                Price not available
                            <% } %>
                                <br>
                                <%= listing.location%>
                                    <br>
                                    <%= listing.country%>
                                    <br>
                                    <% const ownerName = listing.owner && listing.owner.name ? listing.owner.name : "Unknown host"; %>
                                    Hosted by <%= ownerName %>
                    </p>
                </div>
            </div>

            <% // UI guard: show edit/delete only to listing owner. %>
            <% const isListingOwner = currUser && listing.owner && String(currUser._id) === String(listing.owner._id); %>
            <div class="btns">
                <% if (isListingOwner) { %>
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark offset-5">Delete</button>
                    </form>
                <% } %>
            </div>

            <div class="col-8 offset-3 mb-3 reserve-panel">
                <h4>Reserve this property</h4>
                <% if (!currUser) { %>
                    <p class="text-muted reserve-note">Please <a href="/login">login</a> to reserve this property.</p>
                <% } else if (isListingOwner) { %>
                    <p class="text-muted reserve-note">You are the host of this property.</p>
                <% } else if (listing.price == null) { %>
                    <p class="text-muted reserve-note">Reservation is unavailable because price is missing.</p>
                <% } else { %>
                    <form action="/listings/<%= listing.id %>/reservations" method="POST" class="row g-3 needs-validation reserve-form" novalidate>
                        <div class="col-md-4">
                            <label class="form-label" for="checkIn">Check-in</label>
                            <input
                                id="checkIn"
                                type="date"
                                name="reservation[checkIn]"
                                class="form-control reserve-input"
                                min="<%= reservationMinCheckIn %>"
                                required
                            >
                            <div class="invalid-feedback">Select a valid check-in date.</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label" for="checkOut">Check-out</label>
                            <input
                                id="checkOut"
                                type="date"
                                name="reservation[checkOut]"
                                class="form-control reserve-input"
                                min="<%= reservationMinCheckOut %>"
                                required
                            >
                            <div class="invalid-feedback">Select a valid check-out date.</div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label" for="guestCount">Guests</label>
                            <input
                                id="guestCount"
                                type="number"
                                name="reservation[guests]"
                                class="form-control reserve-input"
                                min="1"
                                max="<%= listing.maxGuests || 4 %>"
                                value="1"
                                required
                            >
                            <div class="invalid-feedback">Guests must be between 1 and <%= listing.maxGuests || 4 %>.</div>
                        </div>
                        <div class="col-12">
                            <p class="mb-2 text-muted small reserve-price">Price: &#8377; <%= listing.price.toLocaleString("en-IN") %> per night.</p>
                            <button class="btn reserve-cta-btn">Reserve now</button>
                        </div>
                    </form>
                <% } %>
            </div>

            <% if (isListingOwner) { %>
                <div class="col-8 offset-3 mb-3 host-reservations-panel">
                    <h4>Upcoming reservations</h4>
                    <% if (!propertyReservations || propertyReservations.length === 0) { %>
                        <p class="text-muted">No active reservations for this listing.</p>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-sm align-middle host-reservation-table">
                                <thead>
                                    <tr>
                                        <th>Guest</th>
                                        <th>Check-in</th>
                                        <th>Check-out</th>
                                        <th>Guests</th>
                                        <th>Nights</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% propertyReservations.forEach((reservation) => { %>
                                        <tr>
                                            <td><%= reservation.guest && reservation.guest.name ? reservation.guest.name : "Guest" %></td>
                                            <td><%= reservation.checkIn.toDateString() %></td>
                                            <td><%= reservation.checkOut.toDateString() %></td>
                                            <td><%= reservation.guests %></td>
                                            <td><%= reservation.nights %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            <% } %>
           

            <div class="col-8 offset-3 mb-3 review-form-panel">
                <h4>Leave a review</h4>
                <% // Only logged-in users can submit review. %>
                <% if (currUser) { %>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                        <div class="mb-3 mt-3 rating-panel">
                            <span class="rating-label">Rating</span>

                            <% // Live 1->5 star picker (fills immediately on click). %>
                            <fieldset class="rating-input">
                                <legend>Rating</legend>
                                <div class="rating-stars">
                                    <input type="radio" id="listing-rate1" name="review[rating]" value="1" required />
                                    <label class="rate-star" for="listing-rate1" title="Terrible">&#9733;</label>

                                    <input type="radio" id="listing-rate2" name="review[rating]" value="2" />
                                    <label class="rate-star" for="listing-rate2" title="Not good">&#9733;</label>

                                    <input type="radio" id="listing-rate3" name="review[rating]" value="3" />
                                    <label class="rate-star" for="listing-rate3" title="Average">&#9733;</label>

                                    <input type="radio" id="listing-rate4" name="review[rating]" value="4" />
                                    <label class="rate-star" for="listing-rate4" title="Very good">&#9733;</label>

                                    <input type="radio" id="listing-rate5" name="review[rating]" value="5" />
                                    <label class="rate-star" for="listing-rate5" title="Amazing">&#9733;</label>
                                </div>
                            </fieldset>

                            <div class="invalid-feedback">Please choose a rating between 1 and 5.</div>
                        </div>
                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea
                                name="review[comment]"
                                id="comment"
                                cols="30"
                                rows="5"
                                class="form-control"
                                required
                                minlength="5"
                                maxlength="500"
                            ></textarea>
                            <div class="invalid-feedback">Comment must be between 5 and 500 characters.</div>
                        </div>

                        <button class="btn review-submit-btn">Submit review</button>
                    </form>
                <% } else { %>
                    <p class="text-muted">Please <a href="/login">login</a> to add a review.</p>
                <% } %>
            </div>

            <div class="col-8 offset-3 mb-3 reviews-list-panel">
                <h4>All Reviews</h4>

                <% if (!listing.reviews || listing.reviews.length === 0) { %>
                    <p class="text-muted">No reviews yet. Be the first to review this listing.</p>
                <% } else { %>
                    <% listing.reviews.forEach((review) => { %>
                        <% // Show only profile name in reviews (never email). %>
                        <% const reviewAuthorName = review.author && review.author.name ? review.author.name : "Guest"; %>
                        <% // UI guard: only review author sees delete button. %>
                        <% const isReviewOwner = currUser && review.author && String(currUser._id) === String(review.author._id); %>
                        <div class="card shadow-sm border-0 mb-3 review-premium-card">
                            <div class="card-header review-premium-header d-flex justify-content-between align-items-center">
                                <span class="fw-semibold"><%= reviewAuthorName %></span>
                                <div class="review-rating rating-<%= review.rating %>" aria-label="Rated <%= review.rating %> out of 5">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <span class="review-star <%= i <= review.rating ? 'filled' : '' %>">&#9733;</span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-body review-premium-body">
                                <p class="card-text mb-0"><%= review.comment %></p>
                            </div>
                            <% if (isReviewOwner) { %>
                                <div class="card-footer bg-white border-0 pt-0 review-premium-footer">
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-sm btn-outline-danger review-delete-btn">Delete Review</button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                <% } %>
            </div>
            <div class="col-8 offset-3 mb-4">
                <h4>Location</h4>
                <% // Map container. Center comes from stored listing geometry. %>
                <div id="listing-map" class="listing-map"></div>
                <p id="map-status" class="text-muted small mt-2 mb-0"></p>
            </div>

            <% // Pass minimal map data to external map.js. %>
            <script id="map-data" type="application/json">
                <%- JSON.stringify({
                    title: listing.title || "",
                    location: listing.location || "",
                    country: listing.country || "",
                    geometry: listing.geometry || null,
                }) %>
            </script>
            <link
                rel="stylesheet"
                href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
                integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
                crossorigin=""
            >
            <script
                src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
                integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
                crossorigin=""
            ></script>
            <script src="/js/listing-gallery-slider.js"></script>
            <script src="/js/map.js"></script>
        </div>
    </body>

