<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
    <div class="col-lg-8 col-xl-6 offset-lg-2 offset-xl-3">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h3 class="mb-3">Become a host</h3>
                <p class="text-muted mb-3">Activate your host profile to create and manage your properties.</p>

                <ul class="mb-4">
                    <li>Create new listings with photos and pricing.</li>
                    <li>Edit or remove your own property listings.</li>
                    <li>Manage bookings from guests.</li>
                </ul>

                <form action="/become-host" method="POST">
                    <button class="btn btn-dark add-btn">Activate host profile</button>
                    <a href="/listings" class="btn btn-outline-secondary ms-2">Not now</a>
                </form>
            </div>
        </div>
    </div>
</div>
